# TalkFlow Environment Configuration

# Server Configuration
TALKFLOW_HOST=127.0.0.1
TALKFLOW_PORT=8000

# Audio Settings
SAMPLE_RATE=16000
CHANNELS=1
# Optimized for VAD: 2048 samples = 128ms at 16kHz (contains 4 VAD frames of 512 samples)
CHUNK_DURATION_MS=128

# VAD Settings
VAD_ENABLED=true
VAD_THRESHOLD=0.5
VAD_MIN_SPEECH_DURATION_MS=250
VAD_MIN_SILENCE_DURATION_MS=300
VAD_SPEECH_PAD_MS=100

# Whisper (ASR) Settings
WHISPER_MODEL_SIZE=small
WHISPER_COMPUTE_TYPE=int8
WHISPER_DEVICE=cpu
WHISPER_NUM_WORKERS=1
WHISPER_BEAM_SIZE=5

# Language Settings
SOURCE_LANGUAGE=en
TARGET_LANGUAGE=es

# Argos Translate Settings
ARGOS_DEVICE=cpu

# Piper (TTS) Settings
PIPER_VOICE=en_US-lessac-medium
PIPER_SPEAKER=0
PIPER_LENGTH_SCALE=1.0
PIPER_NOISE_SCALE=0.667
PIPER_NOISE_W=0.8

# Buffer Settings
MIN_BUFFER_DURATION_MS=800
MAX_BUFFER_DURATION_MS=1200
BUFFER_OVERLAP_MS=100

# Performance Settings
MAX_CONCURRENT_REQUESTS=3
PROCESSING_TIMEOUT_SECONDS=10

# Logging
LOG_LEVEL=INFO

# Metrics
ENABLE_METRICS=true
METRICS_WINDOW_SIZE=100

# Model Paths (optional, defaults to ./models/)
# WHISPER_MODEL_PATH=/path/to/whisper/models
# ARGOS_MODEL_PATH=/path/to/argos/models
# PIPER_MODEL_PATH=/path/to/piper/models
